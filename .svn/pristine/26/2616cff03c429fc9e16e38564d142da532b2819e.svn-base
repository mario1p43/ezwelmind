	<insert id="addCenterInsert" parameterType="com.ezwel.admin.service.center.dto.CenterDto">
		INSERT INTO MIND_CENTER (
			 CENTER_NM 
			,CENTER_TYPE
			,CENTER_INTRO
			,HOMEPAGE
			,AREA1
			<if test="isNotNull(area2)">
			,AREA2
			</if>
			,POST
			,ADDR1
			,ADDR2
			,INFRA_PERSONAL_CNT
			,INFRA_WAIT_ROOM_YN
			,INFRA_PLAY_ROOM_CNT
			,INFRA_EDU_ROOM_YN
			,INFRA_ETC
			,OWNER_NM
			,BSNS_NUM
			,BCOND
			,BITEM
			,TEL_NUM
			,FAX_NUM
			,BANK_CD
			,BANK_NM
			,BANK_ORDER
			,FILE_NM1
			,FILE_PATH1
			,FILE_NM2
			,FILE_PATH2
			,FILE_NM3
			,FILE_PATH3
			,REG_DT
			,REG_ID
			,CALC_TYPE
			,CALC_DD1
			<if test="isNotNull(calcDd2)">
			,CALC_DD2
			</if>
