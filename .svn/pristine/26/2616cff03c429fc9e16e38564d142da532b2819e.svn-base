			,#{infraEduRoomYn}
			,#{infraEtc}
			,#{ownerNm}
			,#{bsnsNum}
			,#{bcond}
			,#{bitem}
			,#{telNum}
			,#{faxNum}
			,#{bankCd}
			,#{bankNum}
			,#{bankOrder}
			,#{fileNm1}
			,#{filePath1}
			,#{fileNm2}
			,#{filePath2}
			,#{fileNm3}
			,#{filePath3}
			,DATE_FORMAT(NOW(), '%Y%m%d%H%i%s')
			,#{regId}
			,#{calcType}
			,#{calcDd1}			
			<if test="isNotNull(calcDd2)">
			,#{calcDd2}
			</if>
			,#{dispYn}
			,#{mapUrl}
			,#{publicTraffic}
			,#{mgrMemo}
